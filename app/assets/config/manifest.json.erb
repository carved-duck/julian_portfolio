{
"background_color": "white",
"description": "Julian Schoenfeld's personal portfolio website. He made this after finishing a bootcamp at Le Wagon",
"display": "fullscreen",
"name": "Julian Portfolio",
"short_name": "Julian",
"start_url": "/",
"theme_color": "#000000",
"icons": [
<% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
<% files.each_with_index do |file, index| %>
  <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
  <% if match %>
    {
    "src": "<%= image_path "icons/#{file}" %>?v=2",
    "sizes": "<%= match[:size] %>",
    "type": "image/png"
    }<%= "," unless (files.size - 1) == index %>
  <% end %>
<% end %>
]
}
