<div class="container mt-4">
  <h1 class="mb-4">Events</h1>
  <% if @events.any? %>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-lg-6 col-md-8 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= event.title %></h5>
              <p class="card-text"><%= truncate(event.description, length: 150) %></p>
              <p class="text-muted">
                <small>
                  <%= pluralize(event.attendee_count, 'person') %> attending
                  <% if event.target_capacity.present? %>
                    (targeting <%= event.target_capacity %>)
                  <% end %>
                </small>
              </p>
              <div class="mt-3">
                <%= link_to "View & Sign Up", event_path(event), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>No events currently available</h4>
      <p>Check back soon for upcoming events and opportunities!</p>
    </div>
  <% end %>
</div>
