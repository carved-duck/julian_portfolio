<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <h1 class="mb-4">Sign Up for <%= @event.title %></h1>
      <div class="card">
        <div class="card-body">
          <p class="card-text"><%= simple_format(@event.description) %></p>
        </div>
      </div>
      <% if @event.capacity_warning_message %>
        <div class="alert alert-warning mt-3">
          <%= @event.capacity_warning_message %>
        </div>
      <% end %>
      <div class="card mt-4">
        <div class="card-body">
          <%= simple_form_for([@event, @attendee]) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="form-inputs">
              <%= f.input :name, required: true %>
              <%= f.input :instagram_handle, required: true %>
              <%= f.input :message, as: :text, input_html: { rows: 4 } %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign Up!" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="mt-3">
        <%= link_to "Back to event", @event, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
