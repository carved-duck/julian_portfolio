  </div>
</section>
<!-- Featured Works -->
<section class="featured-works" id="works">
  <h2 class="section-title">Featured Works</h2>
  <% if @featured_photos.any? %>
    <%= render "photos/featured_carousel", photos: @featured_photos %>
  <% else %>
    <div class="text-center py-5">
      <i class="fas fa-camera fa-3x text-muted mb-3"></i>
      <h3>Featured Works Coming Soon</h3>
      <p class="text-muted">I'm curating my best photography to showcase here. Check back soon!</p>
      <div class="mt-3">
        <%= link_to "Browse All Photos", photos_path, class: "btn btn-primary" %>
        <%= link_to "View Projects", projects_path, class: "btn btn-outline-secondary ms-2" %>
      </div>
    </div>
  <% end %>
</section>
