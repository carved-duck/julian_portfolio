<div class="container mt-4">
  <h1 class="mb-4">Photo Gallery</h1>
  <% if @categories.any? %>
    <div class="mb-4">
      <h4>Filter by Category</h4>
      <div class="btn-group" role="group">
        <%= link_to "All", photos_path, class: "btn #{'btn-primary' if params[:category].blank?} #{'btn-outline-primary' unless params[:category].blank?}" %>
        <% @categories.each do |category| %>
          <%= link_to category.titleize, photos_path(category: category),
                      class: "btn #{'btn-primary' if params[:category] == category} #{'btn-outline-primary' unless params[:category] == category}" %>
        <% end %>
      </div>
    </div>
  <% end %>
  <% if @photos.any? %>
    <div class="row">
      <% @photos.each do |photo| %>
        <div class="col-md-4 col-sm-6 mb-4">
          <div class="card h-100">
            <% if photo.image.attached? %>
              <%= link_to photo_path(photo) do %>
                <%= cl_image_tag photo.image.key,
                                 width: 400,
                                 height: 300,
                                 crop: :fill,
                                 quality: :auto,
                                 fetch_format: :auto,
                                 class: "card-img-top",
                                 alt: "Photo in #{photo.category}" %>
              <% end %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= photo.category.titleize %></h5>
              <%= link_to "View", photo_path(photo), class: "btn btn-primary btn-sm" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>No photos yet</h4>
      <p>Photos will appear here once they're uploaded.</p>
    </div>
  <% end %>
</div>
