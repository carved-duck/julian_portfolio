<div class="container mt-4">
  <!-- Breadcrumb Navigation -->
  <nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Home", root_path, class: "text-decoration-none" %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "Photos", photos_path, class: "text-decoration-none" %>
      </li>
      <li class="breadcrumb-item active" aria-current="page"><%= @photo.category.titleize %></li>
    </ol>
  </nav>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <% if @photo.image.attached? %>
        <div class="text-center mb-4">
          <%= cl_image_tag @photo.image.key, width: 800, height: 800, crop: :limit, quality: :auto, fetch_format: :auto, class: "img-fluid rounded shadow", alt: "Photo in #{@photo.category}" %>
        </div>
      <% end %>
      <div class="mb-4">
        <h2>
          <%= @photo.category.titleize %>
          <% if @photo.location.present? %>
            <small class="text-muted">taken in <%= @photo.location %></small>
          <% end %>
        </h2>
        <div class="d-flex gap-2">
          <span class="badge bg-primary"><%= @photo.category %></span>
          <% if @photo.location.present? %>
            <span class="badge bg-secondary"><i class="fas fa-map-marker-alt"></i> <%= @photo.location %></span>
          <% end %>
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <%= link_to "← Back to Gallery", photos_path, class: "btn btn-outline-secondary" %>
        <%= link_to "View #{@photo.category.titleize} Photos", photos_path(category: @photo.category), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
