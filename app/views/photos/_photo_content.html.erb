<div id="photo-content" class="row" data-controller="photo-navigation">
  <div class="col-12 col-md-10 col-lg-8 mx-auto">
    <!-- Photo Image with Film Border -->
    <% if @photo.image.attached? %>
      <div class="text-center mb-4">
        <div class="photo-frame">
          <%= cl_image_tag @photo.image.key,
              width: 800, height: 800, crop: :limit, quality: :auto, fetch_format: :auto,
              class: "img-fluid photo-main-image",
              alt: "Photo in #{@photo.category}" %>
        </div>
      </div>
    <% end %>
    <!-- Photo Information -->
    <div class="photo-info-dark">
      <%= render "photo_info" %>
    </div>
    <!-- Navigation Controls -->
    <div class="nav-buttons-dark">
      <%= render "photo_navigation" %>
    </div>
    <!-- Action Buttons -->
    <div class="d-flex flex-column flex-sm-row justify-content-between gap-2 action-buttons-dark">
      <%= link_to "← Back to Gallery", photos_path,
          class: "btn btn-outline-secondary order-2 order-sm-1",
          data: { turbo_frame: "_top" } %>
      <%= link_to "View All #{@photo.category.titleize}", photos_path(category: @photo.category),
          class: "btn btn-primary order-1 order-sm-2",
          data: { turbo_frame: "_top" } %>
    </div>
  </div>
</div>
