<p style="color: green"><%= notice %></p>
<h1>Admin - Submissions</h1>
<% if @submissions.any? %>
  <div id="submissions">
    <% @submissions.each do |submission| %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= submission.name %></h5>
          <p class="card-text"><strong>Instagram:</strong> @<%= submission.instagram_handle %></p>
          <p class="card-text"><%= truncate(submission.message, length: 150) %></p>
          <small class="text-muted">Submitted: <%= submission.created_at.strftime("%B %d, %Y at %I:%M %p") %></small>
          <div class="mt-2">
            <%= link_to "View", admin_submission_path(submission), class: "btn btn-primary btn-sm" %>
            <%= link_to "Delete", admin_submission_path(submission), method: :delete, data: { confirm: "Are you sure you want to delete this submission?" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info">
    <h3>No submissions yet</h3>
    <p>Submissions from your website will appear here.</p>
  </div>
<% end %>
