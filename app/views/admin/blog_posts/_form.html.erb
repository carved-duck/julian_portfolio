<%= simple_form_for([@blog_post], url: @blog_post.persisted? ? admin_blog_post_path(@blog_post) : admin_blog_posts_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.input :published_at %>
    <%= f.input :slug, hint: "Leave blank to auto-generate from title (recommended)" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
