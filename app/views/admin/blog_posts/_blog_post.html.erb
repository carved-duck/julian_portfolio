<div id="<%= dom_id blog_post %>">
  <p>
    <strong>Title:</strong>
    <%= blog_post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= blog_post.body %>
  </p>

  <p>
    <strong>Published at:</strong>
    <%= blog_post.published_at %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= blog_post.slug %>
  </p>

</div>
