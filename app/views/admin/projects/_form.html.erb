<%= simple_form_for [:admin, @project] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :github_url %>
    <%= f.input :live_url %>
    <%= f.input :featured_image %>
    <%= f.input :tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
