<%= simple_form_for [:admin, @photo], html: { multipart: true } do |f| %>
  <%= f.input :category %>
  <%= f.input :image,
        as: :file,
        hint: (@photo.image.attached? ?
          image_tag(@photo.image.variant(resize_to_limit: [150,150])) :
          "") %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
