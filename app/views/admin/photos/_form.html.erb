<%= simple_form_for [:admin, @photo], html: { multipart: true } do |f| %>
  <%= f.input :category %>
  <%= f.input :image,
        as: :file,
        hint: (@photo.image.attached? ?
          cl_image_tag(@photo.image.key, width: 150, height: 150, crop: :fill) :
          "") %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
