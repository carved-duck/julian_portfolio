<%= simple_form_for(@event, url: @event.persisted? ? admin_event_path(@event) : admin_events_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="form-inputs">
    <%= f.input :title, hint: "The name of your event (e.g., 'Photography Workshop')" %>
    <%= f.input :description, as: :text, input_html: { rows: 5 }, hint: "Describe what this event is about, when it's happening, etc." %>
    <%= f.input :active, hint: "Only active events will be visible to users for signup" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
