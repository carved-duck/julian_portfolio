<div class="row">
  <% @projects.each do |project| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if project.featured_image.attached? %>
          <%= cl_image_tag project.featured_image.key, width: 300, height: 200, crop: :fill, quality: :auto, fetch_format: :auto, class: "card-img-top" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to project.title, project_path(project) %>
          </h5>
          <p class="card-text">
            <%= truncate(project.description, length: 100) %>
          </p>
          <%= link_to "View Details", project_path(project), class: "btn btn-sm btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
