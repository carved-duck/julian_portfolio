<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h1 class="mb-4"><%= @project.title %></h1>
      <% if @project.featured_image.attached? %>
        <div class="mb-4">
          <%= cl_image_tag @project.featured_image.key, width: 800, height: 600, crop: :limit, quality: :auto, fetch_format: :auto, class: "img-fluid rounded shadow", alt: @project.title %>
        </div>
      <% end %>
      <div class="mb-4">
        <h3>Description</h3>
        <p class="lead"><%= simple_format(@project.description) %></p>
      </div>
      <% if @project.has_links? %>
        <div class="mb-4">
          <h4>Links</h4>
          <div class="d-flex gap-2 flex-wrap">
            <% if @project.github_url.present? %>
              <%= link_to format_url(@project.github_url), target: "_blank", class: "btn btn-outline-dark" do %>
                <i class="fab fa-github"></i> View Code
              <% end %>
            <% end %>
            <% if @project.live_url.present? %>
              <%= link_to format_url(@project.live_url, add_www: true), target: "_blank", class: "btn btn-primary" do %>
                <i class="fas fa-external-link-alt"></i> Website
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      <% if @project.tags.present? %>
        <div class="mb-4">
          <h4>Technologies</h4>
          <% @project.tag_list.each do |tag| %>
            <span class="badge bg-secondary me-1"><%= tag %></span>
          <% end %>
        </div>
      <% end %>
      <div class="mt-5">
        <%= link_to "â† Back to Projects", projects_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
