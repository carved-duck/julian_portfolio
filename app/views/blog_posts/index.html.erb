<div class="container mt-4">
  <h1 class="mb-4">Blog</h1>
  <% if @blog_posts.any? %>
    <div class="row">
      <% @blog_posts.each do |blog_post| %>
        <div class="col-lg-6 col-md-8 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= blog_post.title %></h5>
              <p class="card-text"><%= truncate(blog_post.body, length: 120) %></p>
              <small class="text-muted">
                <%= blog_post.published_at.strftime("%B %d, %Y") if blog_post.published? %>
              </small>
              <div class="mt-3">
                <%= link_to "Read More", blog_post_path(blog_post), class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      <h4>No blog posts yet</h4>
      <p>Blog posts will appear here once they're published.</p>
    </div>
  <% end %>
</div>
